{
  "name": "digital-marketplace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./build",
    "start:dev": "concurrently \"ts-node-dev ./src/server.ts\" \"npm run scss\"",
    "start": "node ./build/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "build": "npm-run-all lint format clean scss:build && tsc && shx mkdir -p build/views && copyfiles -VEau src/views/** build/views",
    "lint": "eslint src",
    "format": "npx prettier --write src",
    "format:check": "npx prettier --check src",
    "scss:build": "sass src/stylesheets/application.scss public/stycssles/style.css",
    "scss": "sass --watch src/stylesheets/application.scss public/stycssles/style.css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "nunjucks": "^3.2.4",
    "sass": "^1.63.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@tsconfig/node18": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/nunjucks": "^3.2.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^29.6.1",
    "concurrently": "^8.2.0",
