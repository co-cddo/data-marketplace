{% extends "layouts/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}Incorrect spreadsheet format{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl govuk-!-font-weight-bold">CSV error</h1>
            <div class="govuk-body">The file you uploaded is missing the following sheets: {{missingSheets}}</div>
            <div class="govuk-body">Please do not edit the template in any way other than adding your data asset descriptions.</div>
            {{ govukButton({
                text: "Try again",
                href: "/publish/csv/upload",
                name: "tryAgainButton"
            }) }}
        </div>
    </div>
</div>
{% endblock %}